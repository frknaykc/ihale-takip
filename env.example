# Database
DATABASE_URL=sqlite:///./data.db

# Scraping frequency (minutes)
SCRAPE_INTERVAL_MINUTES=180

# Email settings (optional - for email functionality)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=your-email@gmail.com

# CORS origins
ALLOWED_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Hugging Face model cache
HF_HOME=./.hf-cache

# Security model thresholds (optional overrides)
SEC_SIM_THR=0.70
SEC_PROB_THR=0.85
SEC_CLF_PATH=sec_clf.joblib
SEC_EMB_NAME=paraphrase-multilingual-MiniLM-L12-v2
